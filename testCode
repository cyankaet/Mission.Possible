#pragma config(Motor,  port1,           frontMotor,    tmotorNone, openLoop)
#pragma config(Motor,  port2,           backRightMotor, tmotorNone, openLoop)
#pragma config(Motor,  port3,           backLeftMotor, tmotorNone, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
typedef struct{
 int halfspeed;
 int fullspeed;
} speed;
speed frontMotor;
frontMotor.halfspeed = 63;

task Test()
{
	//runs port1 at full speed (127/127) for 1 second
	motor[frontMotor] = halfSpeed;
}

task main()
{
	while(true){
		startTask(Test);
		wait1Msec(1000);

		stopTask(Test);
		motor[frontMotor]=0;
		wait1Msec(1000);
	}
}
